<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avlweb.encycloviewer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainList"
            android:label="@string/title_activity_main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avlweb.encycloviewer.Home" />
        </activity>
        <activity
            android:name=".DisplayItem"
            android:label="@string/title_activity_display_item">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avlweb.encycloviewer.MainList" />
        </activity>
        <activity
            android:name=".SearchInDatabase"
            android:label="@string/title_activity_search"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avlweb.encycloviewer.MainList" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avlweb.encycloviewer.Home" />
        </activity>
    </application>

</manifest>